<?php if (($_products = $this->getProductCollection()) && $_products->getSize()): ?>
<div class="box recently">
<h2 class="subtitle"><?php //echo $this->__('New Products') ?></h2>
    <table cellspacing="0" class="recently-list" id="new-products-list-table">
    <tr>
    <?php $i=0; foreach ($_products->getItems() as $_product): ?>
        <?php if ($i>5): continue; endif; ?>
        <td>
            <div>
                <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(135) ?>" width="135" height="135" alt="<?php echo $this->htmlEscape($_product->getName()) ?>" />
            </div>
            <p class="login"><?php echo $this->htmlEscape($_product->getName()) ?></p>                
            </td>
            <?php if ($i == 2) echo "</tr><tr>" ?>
    <?php $i++; endforeach; ?>
    <?php for($i;$i%3!=0;$i++): ?>
            <td>&nbsp;</td>
        <?php endfor ?>
        </tr>
    </table>
</div>
<?php endif; ?>