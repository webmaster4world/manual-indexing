/**
* Shoping cart sidebar
*
* @see Mage_Checkout_Block_Cart_Sidebar
*/
?>
<div class="block block-cart">
<?php $_cartQty = $this->getSummaryCount() ?>
<div class="block-title">
<strong><span><?php echo $this->__('My Cart') ?></span></strong>
</div>
<div class="block-content">
<?php if ($_cartQty>0): ?>
<div class="summary">
<?php if ($_cartQty==1): ?>
<p class="amount"><a href="<?php echo $this->getUrl(); ?>quickactions/?action=directdownloadcheckout">1 <strong><?php echo $this->__('item') ?></strong></a><?php echo $this->__(' in your cart.') ?></p>
<?php else: ?>
<p class="amount"><a href="<?php echo $this->getUrl(); ?>quickactions/?action=directdownloadcheckout"><?php echo $_cartQty . ' <strong>' . $this->__('items'); ?></strong></a><?php echo $this->__(' in your cart.') ?></p>
<?php endif ?>
<p class="subtotal">
</p>
</div>
<?php endif ?>
<?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
<div class="actions">
<button type="button" title="<?php echo $this->__('Checkout') ?>" class="button" onclick="setLocation('<?php echo $this->getUrl(); ?>quickactions/?action=directdownloadcheckout')"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
</div>
<?php endif ?>
<?php $_items = $this->getRecentItems() ?>
<?php if(count($_items)): ?>
<p class="block-subtitle"><?php echo $this->__('Recently added item(s)') ?></p>
<ol id="cart-sidebar" class="mini-products-list">
<?php foreach($_items as $_item): ?>
<?php echo $this->getItemHtml($_item) ?>
<?php endforeach; ?>
</ol>
<script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>
<?php else: ?>
<p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
<?php endif ?>
</div>
</div>
